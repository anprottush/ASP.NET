@model List<ZeroHunger.Models.Employee>
@{
    ViewBag.Title = "ManageEmployee";
}

<h2>Manage Employee</h2>

@if (@TempData["message"] != null)
{
    <h3 class="alert alert-warning">@TempData["message"]</h3>
    <br />
    <br>
}
<a href="/Employee/Create" class="btn btn-success">Create</a>
<br />
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>User Name</th>
            <th>Phone Number</th>
            <th>E-Mail</th>
            <th>Date</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.UserName</td>
                <td>@employee.PhoneNumber</td>
                <td>@employee.Email</td>
                <td>@employee.Date</td>
                <td>@employee.Address</td>
                <td>
                    <a href="/Employee/Edit/@employee.Id" class="btn btn-success">Edit</a>
                    <a href="/Employee/Delete/@employee.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a href="/Admin/Dashboard" class="btn btn-primary">Dashboard</a>
</div>


