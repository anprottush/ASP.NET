@model ProductSystem.Database.Product

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<form action="" method="post" class="form-horizontal">
    <h4>Product</h4>
    <hr />
    <div class="form-group">
        <label for="name" class="control-label col-md-2">Name</label>
        <div class="col-md-10">
            <input type="text" placeholder="Name" name="Name" class="form-control" />
        </div>
        <br /><br />

        <label for="price" class="control-label col-md-2">Price</label>
        <div class="col-md-10">
            <input type="text" placeholder="Price" name="Price" class="form-control" />
        </div>
        <br /><br />

        <label for="quantity" class="control-label col-md-2">Quantity</label>
        <div class="col-md-10">
            <input type="text" placeholder="Quantity" name="Quantity" class="form-control" />
        </div>
        <br /><br />

        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
    <div>
        <a href="/product/index" class="">Back to List</a>
    </div>
</form>



