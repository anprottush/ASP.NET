@model ProductSystem.Database.Product

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>
@if (@TempData["msg"] != null)
{

    <h3 class="alert alert-warning">@TempData["msg"]</h3>
}
else
{
    <h3>Are you sure you want to delete this?</h3>
    <h4>Product</h4>
    <hr />
    <form action="" method="post" class="form-horizontal">
        <div class="form-group">
            <label for="name" class="control-label col-md-2">Name</label>
            <div class="col-md-10">
                <input readonly type="text" value="@Model.Name" name="Name" class="form-control" />
            </div>
            <br /><br />

            <label for="price" class="control-label col-md-2">Price</label>
            <div class="col-md-10">
                <input readonly type="text" value="@Model.Price" name="Price" class="form-control" />
            </div>
            <br /><br />

            <label for="quantity" class="control-label col-md-2">Quantity</label>
            <div class="col-md-10">
                <input readonly type="text" value="@Model.Quantity" name="Quantity" class="form-control" />
            </div>
            <br /><br />

            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Delete" class="btn btn-danger" />
            </div>
        </div>
        <div>
            <a href="/product/index" class="">Back to List</a>
        </div>
    </form>
}

